<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_marginLeft="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_vertical_margin"
    android:layout_marginTop="5dip"
    android:layout_marginBottom="5dip"
    card_view:cardBackgroundColor="@color/cardBackground"
    card_view:cardElevation="5dp"
    card_view:cardCornerRadius="4dp"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >

    <TextView
        android:id="@+id/tvLen"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/white"
        android:background="@drawable/rounded_corner_len"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:text="₹2455"
        />

    <TextView
        android:id="@+id/tvDen"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/white"
        android:background="@drawable/rounded_corner_den"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/tvLen"
        android:text="₹2455"/>
    <!-- moneycontrols color #64DD17-->
    <!-- previous color #66cc00-->


    <TextView
        android:id="@+id/tvPersonName"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:maxLines="3"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tvDen"
        android:layout_toEndOf="@+id/tvDen"
        android:text="Naushad Shukoor"
        android:layout_toLeftOf="@+id/rlBtEdit"
        android:layout_toStartOf="@+id/rlBtEdit"/>

    <RelativeLayout
        android:id="@+id/rlBtRemove"
        android:layout_width="50dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        >

    <ImageButton
        android:id="@+id/btRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clickable="false"
        android:duplicateParentState="true"
        style="@style/deleteButton"
        />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlBtEdit"
        android:layout_width="50dp"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    <ImageButton
        android:id="@+id/btEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clickable="false"
        android:duplicateParentState="true"
        style="@style/editButton"

        />
    </RelativeLayout>

</RelativeLayout>

</android.support.v7.widget.CardView>